<div class="container pt-5">
  <div class="row">
    <div class="col-md-19 col-lg-8 mx-auto" >
      <h2 class="text-center  my-5">ワンちゃん登録</h2>
      <%= form_with model: @pet, data: { turbo: false } do |f| %>
        <div class="mb-3">
          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :birth_date, "生年月日", class: "form-label" %>
          <%= f.date_select :birth_date, start_year: 2010, end_year: Date.today.year, use_month_numbers: true, class: "form-control" %>
        </div>
        <div class="text-center mb-3">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>